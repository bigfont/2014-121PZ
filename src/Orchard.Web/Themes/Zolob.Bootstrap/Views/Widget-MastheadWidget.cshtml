@Display(Model.Content)


@*Add javascript to foot.*@
@using (Script.Foot())
{
    <script type="text/javascript">

        //<![CDATA[
        $(function () {

            var masthead,
                maintainAspectRation,
                aspectRatio;

            maintainAspectRatio = function (element, heightDividedByWidth) {
                var width = element.width();
                var height = width * heightDividedByWidth;
                element.height(height);
            }

            // if we're on the splash page, use this aspect ratio
            masthead = $(".detail-splash-page .widget-masthead-widget");
            aspectRatio = 755 / 1200;
            // otherwise, use another aspect ratio
            if (!masthead[0]) {
                masthead = $(".widget-masthead-widget");
                aspectRatio = 200 / 1200;
            }

            $(window).resize(function () {
                maintainAspectRatio(masthead, aspectRatio);
            });

            $(window).resize();
        });
        //]]>

    </script>

}