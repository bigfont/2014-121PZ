@Display(Model.Content)


@*Add javascript to foot.*@
@using (Script.Foot())
{
    <script type="text/javascript">

        //<![CDATA[
        $(function () {

            var maintainAspectRatio = function(element, ratio)
            {
                var width = element.width();
                var height = width * ratio;
                element.height(height);
            }

            var masthead = $(".widget-masthead-widget");

            $(window).resize(function () {
                maintainAspectRatio(masthead, 755 / 1200);
            });

            $(window).resize();
        });
        //]]>

    </script>

}